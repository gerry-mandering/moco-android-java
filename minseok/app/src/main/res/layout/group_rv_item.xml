<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idTVTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingHorizontal="5dp"
            android:ellipsize="end"
            android:text="제목"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/idVBar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/round_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:id="@+id/idTVContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:ellipsize="end"
                android:maxLines="2"
                android:minLines="2"
                android:paddingHorizontal="5dp"
                android:text="내용"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/idTVLocation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_baseline_place_24"
                    android:drawablePadding="1dp"
                    android:fontFamily="@font/notosans_regular"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:paddingLeft="1dp"
                    android:text="경기 안양시 만안구 성결대학로 53"
                    android:textColor="@color/grey"
                    android:textSize="15sp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/idTVDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="viewStart"
                        android:drawableStart="@drawable/ic_baseline_calendar_month_21"
                        android:drawablePadding="4dp"
                        android:fontFamily="@font/notosans_regular"
                        android:includeFontPadding="false"
                        android:paddingLeft="3dp"
                        android:text="00/00"
                        android:textColor="@color/grey"
                        android:textSize="15sp">

                    </TextView>

                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/idTVTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableStart="@drawable/ic_baseline_access_time_filled_20"
                        android:fontFamily="@font/notosans_regular"
                        android:includeFontPadding="false"
                        android:textAlignment="center"
                        android:paddingHorizontal="12dp"
                        android:text="00:00 AM"
                        android:textColor="@color/grey"
                        android:textSize="15sp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/idTVHeadCnt"
                        android:layout_width="match_parent"
                        android:textAlignment="viewEnd"
                        android:layout_height="match_parent"
                        android:drawableStart="@drawable/ic_baseline_people_alt_24"
                        android:fontFamily="@font/notosans_regular"
                        android:includeFontPadding="false"
                        android:text="2 / 6"
                        android:paddingLeft="51dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/grey"
                        android:textSize="15sp">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>